{
  "compilerOptions": {
    "target": "esnext",                                  
    "module": "esnext",     
    "moduleResolution": "node",   
    "declaration": true,
    "outDir": "dist",                      
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                                
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
